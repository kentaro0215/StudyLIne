<h1>Dashboard#after_login</h1>
<div class="graph-container"> 
  <button id="toggle-button">Toggle Graphs</button>
  <div id="chart-container" style="display: block;">
    <%= render partial: 'shared/chart' %>
  </div>
  <div id="line-container" style="display: none;">
    <%= render partial: 'shared/line' %>
  </div>
</div>

<script type="text/javascript">
  document.getElementById('toggle-button').addEventListener('click', function() {
    var chartContainer = document.getElementById('chart-container');
    var lineContainer = document.getElementById('line-container');

    if (chartContainer.style.display === 'block') {
      chartContainer.style.display = 'none';
      lineContainer.style.display = 'block';
    } else {
      chartContainer.style.display = 'block';
      lineContainer.style.display = 'none';
    }
  });
</script>

<%
=begin%>
 <!-- HTMLの<head>セクションに以下のコードを追加 -->
<script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
<!-- チャートを表示するためのHTML要素 -->
<canvas id="totalTimeChart" width="400" height="200"></canvas>

<script>
var data = {
  labels: ['6日前', '5日前', '4日前', '3日前', '2日前', '1日前', '今日'],  // セッション名または日付など
  datasets: [{
    label: 'Total Time (minutes)',
    data: <%= @last_week_dashboards.flatten %>,  // これはRailsからのtotal_timeデータで置き換える必要があります
    backgroundColor: [
      'rgba(255, 99, 132, 0.2)',
      'rgba(54, 162, 235, 0.2)',
      'rgba(255, 206, 86, 0.2)'
    ],
    borderColor: [
      'rgba(255, 99, 132, 1)',
      'rgba(54, 162, 235, 1)',
      'rgba(255, 206, 86, 1)'
    ],
    borderWidth: 1
  }]
};

var ctx = document.getElementById('totalTimeChart').getContext('2d');
var totalTimeChart = new Chart(ctx, {
  type: 'bar',  // barタイプのグラフを指定
  data: data,
  options: {
    scales: {
      y: {
        beginAtZero: true
      }
    }
  }
});
</script> 
<%
=end%>

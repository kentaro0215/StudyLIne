<%= form_for @study_record, url: dashboard_path(@study_record) do |f| %>
  <div class="flex flex-col items-center">
    <!-- フォームフィールド -->
    <div class="field mb-4">
      <%= f.label :start_time %>
      <%= f.datetime_select :start_time %>
    </div>
    <div class="field mb-4">
      <%= f.label :finish_time %>
      <%= f.datetime_select :finish_time %>
    </div>

    <!-- 更新ボタン -->
    <div class="mt-4">
      <%= f.submit "更新", class: "btn" %>
    </div>
  </div>
<% end %>

<!-- 削除ボタンコンテナ -->
<div class="flex flex-col items-center mt-2">
  <%= button_to "削除", dashboard_path(@study_record), method: :delete, form: { class: "inline" }, class: "btn" %>
</div>
